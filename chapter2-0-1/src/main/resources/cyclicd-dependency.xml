<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns="http://www.springframework.org/schema/beans"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	   default-autowire="byName"
>


	<bean id="hello" class="com.goat.chapter201.cyclicdependence.Hello">
		<property name="world" ref="world"/>
	</bean>

	<bean id="world" class="com.goat.chapter201.cyclicdependence.World">
		<property name="hello" ref="hello"/>
	</bean>

	<bean id="room" class="com.goat.chapter201.cyclicdependence.Room">
		<property name="television" value="Xiaomi"/>
		<property name="airConditioner" value="Gree"/>
		<property name="refrigerator" value="Haier"/>
		<property name="washer" value="Siemens"/>
	</bean>

</beans>